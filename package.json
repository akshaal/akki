{
    "name": "akki",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "scripts": {
        "dev": "concurrently \"tsc --preserveWatchOutput -w --project tsconfig.json\" \"TS_NODE_CACHE_DIRECTORY=temp/ts-node-cache NODE_ENV=development NODE_PATH=./dist nodemon -r source-map-support/register -w ./dist ./dist/server/index.js\"",
        "build": "NODE_ENV=production tsc --project tsconfig.json",
        "start": "NODE_ENV=production NODE_PATH=./dist node -r source-map-support/register ./dist/server/index.js",
        "clean": "rimraf dist logs temp coverage .nyc_output",
        "test": "NODE_ENV=test TS_NODE_CACHE_DIRECTORY=temp/ts-node-cache NODE_PATH=./dist ts-mocha --exit true --require source-map-support/register --paths -p ./tsconfig.json **/*.spec.ts",
        "test:watch": "NODE_ENV=test TS_NODE_CACHE_DIRECTORY=temp/ts-node-cache NODE_PATH=./dist ts-mocha --require source-map-support/register -w --watch-files \"./src/**/*.ts\" --paths -p ./tsconfig.json **/*.spec.ts",
        "test:coverage": "nyc --reporter=html --reporter=text --reporter=text-summary npm test",
        "prettier": "prettier --write \"./src/**/*.{ts,js,scss}\"",
        "lint": "eslint src --ext .ts --ext .js"
    },
    "keywords": [],
    "author": "",
    "dependencies": {
        "bin-protocol": "^3.1.1",
        "bson": "^4.2.2",
        "express": "^4.17.1",
        "injection-js": "^2.4.0",
        "on-finished": "^2.3.0",
        "p-map-series": "^2.1.0",
        "pify": "^5.0.0",
        "prom-client": "^13.0.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.6.3",
        "serialport": "^9.0.4",
        "triple-beam": "^1.3.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/bson": "^4.0.3",
        "@types/chai": "^4.2.14",
        "@types/chai-as-promised": "^7.1.3",
        "@types/express": "^4.17.9",
        "@types/lodash": "^4.14.166",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.16",
        "@types/on-finished": "^2.3.1",
        "@types/pify": "^5.0.0",
        "@types/serialport": "^8.0.1",
        "@types/supertest": "^2.0.10",
        "@types/triple-beam": "^1.3.2",
        "@typescript-eslint/eslint-plugin": "^4.11.0",
        "@typescript-eslint/parser": "^4.11.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "deep-eql": "^4.0.0",
        "eslint": "^7.16.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-rxjs": "^2.1.5",
        "husky": "^4.3.6",
        "mocha": "^8.2.1",
        "nodemon": "^2.0.6",
        "npm-upgrade": "^2.0.4",
        "nyc": "^15.1.0",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "source-map-support": "^0.5.19",
        "supertest": "^6.0.1",
        "ts-mocha": "^8.0.0",
        "ts-mockito": "^2.6.1",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "4.1.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
